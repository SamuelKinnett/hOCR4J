    </licenses>

    <developers>
        <developer>
            <id>KarolS</id>
            <name>Karol Stasiak</name>
            <email>karol.m.stasiak+hocr-parser@gmail.com</email>
            <url>http://karols.github.io</url>
        </developer>
        <developer>
            <id>SamuelKinnett</id>
            <name>Samuel Kinnett</name>
        </developer>
    </developers>

    <scm>
        <connection>scm:git:git@github.com:SamuelKinnett/hOCR4J.git</connection>
