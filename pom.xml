        <maven.compiler.source>1.8</maven.compiler.source>
        <maven.compiler.target>1.8</maven.compiler.target>
    </properties>


    <groupId>io.github.karols</groupId>
    <artifactId>hocr4j</artifactId>
    <version>0.1.2</version>

    <name>hOCR4J</name>
